#!/usr/bin/env bash
# Install nginx if not already installed
apt-get update
apt-get install -y nginx

# Create the redirect config in the default site file
REDIRECT="location /redirect_me {\n\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n}"

# Insert the redirect inside the server block
sed -i "/listen 80 default_server;/a\\
$REDIRECT" /etc/nginx/sites-available/default

# Restart nginx to apply changes
service nginx restart

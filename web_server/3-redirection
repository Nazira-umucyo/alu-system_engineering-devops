#!/usr/bin/env bash
# Configure Nginx to redirect /redirect_me to a YouTube URL with 301 status

apt-get update -y
apt-get install -y nginx

CONFIG="/etc/nginx/sites-available/default"
if ! grep -q "/redirect_me" "$CONFIG"; then
  sed -i "/server_name _;/a \\
    location /redirect_me {\n\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\
    }" "$CONFIG"
fi

# Restart nginx using service command (systemctl not allowed)
service nginx restart

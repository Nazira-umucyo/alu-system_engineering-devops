#!/usr/bin/env bash
# Install nginx and configure root page with required string

apt-get update -y
apt-get install -y nginx

# Set correct content
echo "Holberton School for the win!" > /var/www/html/index.html

# Set ownership and permissions
chown www-data:www-data /var/www/html/index.html
chmod 644 /var/www/html/index.html

# Ensure default site config root is /var/www/html
sed -i 's|root /var/www/html;|root /var/www/html;|g' /etc/nginx/sites-enabled/default

# Ensure index includes index.html
sed -i 's/index index.html index.htm/index index.html index.htm/g' /etc/nginx/sites-enabled/default

# Restart nginx without systemctl
service nginx restart

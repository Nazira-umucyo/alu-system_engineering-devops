#!/usr/bin/env bash
# Install nginx if not installed
apt-get update -y
apt-get install -y nginx

# Insert redirect block right after the 'listen 80 default_server;' line
sed -i '/listen 80 default_server;/a location /redirect_me {\n\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n}' /etc/nginx/sites-available/default

# Restart nginx using service command (not systemctl)
service nginx restart

#!/usr/bin/env bash
# Fixes nginx to listen on port 80 and prints the count of listeners on port 80

apt-get update -qq
apt-get install -y nginx > /dev/null 2>&1

if pgrep apache2 >/dev/null; then
    service apache2 stop > /dev/null 2>&1
    apt-get remove -y apache2 > /dev/null 2>&1
fi

service nginx start > /dev/null 2>&1

sleep 1

# Print number of processes listening on port 80
ss -ltnp | grep -c ':80'

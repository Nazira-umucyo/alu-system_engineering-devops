#!/usr/bin/env bash
# This script configures Nginx to serve a custom 404 page

# Install nginx if not already installed
apt-get update -y
apt-get install -y nginx

# Create the custom 404 HTML page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Update Nginx config to serve custom 404
CONFIG="/etc/nginx/sites-available/default"

# Ensure only one 404 line exists
sed -i '/error_page 404/d' "$CONFIG"
sed -i '/server_name _;/a \    error_page 404 /custom_404.html;' "$CONFIG"

# Restart nginx using service
service nginx restart

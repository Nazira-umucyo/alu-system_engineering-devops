#!/usr/bin/env bash

# Install nginx
apt-get update -y
apt-get install -y nginx

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Update nginx default config
CONFIG="/etc/nginx/sites-available/default"

# Remove any previous conflicting entries
sed -i '/error_page 404/d' "$CONFIG"
sed -i '/location = \/custom_404.html/d' "$CONFIG"

# Insert error_page directive
sed -i '/server_name _;/a \    error_page 404 /custom_404.html;' "$CONFIG"

# Add location block without 'internal'
if ! grep -q "location = /custom_404.html" "$CONFIG"; then
  sed -i '/server_name _;/a \
    location = /custom_404.html {\n\
    }' "$CONFIG"
fi

# Restart nginx
service nginx restart

#!/usr/bin/env bash
# Install nginx if not installed
apt-get update
apt-get install -y nginx

# Create redirect config inside the server block
sed -i "/^\s*server_name _;/a \\        location /redirect_me {\n            return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n        }" /etc/nginx/sites-available/default

# Restart nginx to apply changes
systemctl restart nginx

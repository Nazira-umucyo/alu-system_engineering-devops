#!/usr/bin/env bash
# Bash script to configure a 301 redirection for /redirect_me

set -e

# Install Nginx
apt-get update -y
apt-get install -y nginx

# Add redirection in the default config
CONFIG="/etc/nginx/sites-available/default"

# Insert the redirect block inside the server block, above the last closing brace
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' "$CONFIG"

# Restart nginx to apply changes
service nginx restart
